<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - نظام إدارة المخازن</title>

    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background-color: #f7f7f7;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
        }

        footer {
            margin-top: 40px;
            padding: 15px 0;
            background-color: #222;
            color: #ccc;
        }
    </style>
</head>

<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">

            <a class="navbar-brand" href="/Home/Index">📦 نظام إدارة المخازن</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMenu">

                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">🏠 الرئيسية</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Products">📦 المنتجات</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Warehouses">🏬 المخازن</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Stock">📊 عمليات المخزون</a>
                    </li>

                    <!-- اختياري: صفحة اختبار الأنماط -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/TestStrategy">🧪 اختبارات النظام</a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div> 2025 — نظام إدارة المخازن </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
