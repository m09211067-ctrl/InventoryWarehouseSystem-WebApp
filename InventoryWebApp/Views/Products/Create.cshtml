@model InventoryWebApp.Models.Product

@{
    ViewData["Title"] = "إضافة منتج جديد";
}

<div class="container mt-4" dir="rtl">
    <h2 class="mb-4 text-center">➕ إضافة منتج جديد</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">

            <form method="post" class="card p-4 shadow-sm bg-white">

                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label">اسم المنتج</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">الكمية</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">السعر</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">الباركود</label>
                    <input asp-for="Barcode" class="form-control" />
                    <span asp-validation-for="Barcode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">الوصف</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label>اختر المخزن</label>
                    <select name="warehouseId" class="form-control" required>
                        <option value="">-- اختر مخزن --</option>
                        @foreach (var w in ViewBag.Warehouses)
                        {
                            <option value="@w.WarehouseID">@w.WarehouseName (@w.BranchName)</option>
                        }
                    </select>
                </div>


                <div class="d-flex justify-content-between mt-3">
                    <a href="/Products" class="btn btn-secondary"> رجوع للقائمة</a>
                    <button type="submit" class="btn btn-success"> حفظ المنتج</button>
                </div>

            </form>

        </div>
    </div>
</div>