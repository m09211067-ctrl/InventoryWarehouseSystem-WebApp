@{
    ViewData["Title"] = "خصم مخزون";
}

<div class="container mt-4" dir="rtl">

    <h2 class="text-center mb-4 text-warning">➖ خصم كمية من المخزون</h2>

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["error"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-7">

            <form method="post" class="card p-4 shadow-sm">

                <div class="mb-3">
                    <label class="form-label">اختر المنتج</label>
                    <select name="productId" class="form-select">
                        @foreach (var p in ViewBag.Products)
                        {
                            <option value="@p.ProductID">@p.ProductName</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">اختر المخزن</label>
                    <select name="warehouseId" class="form-select">
                        @foreach (var w in ViewBag.Warehouses)
                        {
                            <option value="@w.WarehouseID">@w.WarehouseName</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">الكمية المراد خصمها</label>
                    <input type="number" name="quantity" class="form-control" required min="1" />
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a href="/Stock" class="btn btn-secondary">⬅ رجوع</a>
                    <button class="btn btn-warning">خصم</button>
                </div>

            </form>

        </div>
    </div>

</div>
