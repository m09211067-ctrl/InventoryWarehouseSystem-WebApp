@model InventoryWebApp.Models.DashboardViewModel

@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="container mt-4" dir="rtl">

    <h2 class="text-center mb-4">📊 لوحة تحكم نظام إدارة المخزون</h2>

    <!-- Cards Section -->
    <div class="row text-center mb-4">

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold">عدد المنتجات</h5>
                    <h3 class="text-primary fw-bold">@Model.ProductCount</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold">عدد المخازن</h5>
                    <h3 class="text-success fw-bold">@Model.WarehouseCount</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold">عدد الحركات</h5>
                    <h3 class="text-info fw-bold">@Model.MovementCount</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold">إجمالي الكميات</h5>
                    <h3 class="text-danger fw-bold">@Model.TotalStock</h3>
                </div>
            </div>
        </div>

    </div>

    <!-- Low stock alert -->
    <div class="mt-4">

        <h4 class="mb-3">⚠️ المنتجات منخفضة المخزون</h4>

        @if (Model.LowStockProducts.Any())
        {
            <table class="table table-striped table-bordered text-center align-middle bg-white shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>رقم المنتج</th>
                        <th>الاسم</th>
                        <th>الكمية</th>
                        <th>السعر</th>
                        <th>خيارات</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model.LowStockProducts)
                    {
                        <tr>
                            <td>@p.ProductID</td>
                            <td>@p.ProductName</td>
                            <td class="text-danger fw-bold">@p.Quantity</td>
                            <td>@p.Price</td>
                            <td>
                                <a href="/Products/Edit/@p.ProductID" class="btn btn-warning btn-sm">تعديل</a>
                                <a href="/Stock/Add" class="btn btn-success btn-sm">إضافة مخزون</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-success text-center">
                لا توجد منتجات منخفضة المخزون حاليًا 🎉
            </div>
        }

    </div>

</div>
